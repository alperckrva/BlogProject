<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/img/a.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" />

    <style>
        .active-link {
            color: red; 
        }

        .inactive-link {
            opacity: 0.5;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div>
            <a class="navbar-brand" href="/home/homepage" style="font-size:22px;">
                <img src="/img/a.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy" style="margin-right: 10px;">
            </a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarToggler">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="/home/homepage" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" style="font-size: 22px; margin-right: 10px;">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a href="/home/about" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" style="font-size: 22px; margin-right: 10px;">Hakkımda</a>
                </li>
                <li class="nav-item">
                    <a href="/blog/socialmedia" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" style="font-size: 22px; margin-right: 10px;">Sosyal Medya Hesapları</a>
                </li>
                <li class="nav-item">
                    <a href="/blog/project" class="btn btn-secondary btn-lg active" role="button" aria-pressed="true" style="font-size: 22px; margin-right: 10px;">Projelerim</a>
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $('.nav-link').on('click', function () {
                $('.nav-link').removeClass('active-link').addClass('inactive-link'); // Tüm sekmeleri sönük yap
                $(this).removeClass('inactive-link').addClass('active-link'); // Tıklanan sekmeyi aktif yap
            });
        });
    </script>
</body>
</html>
